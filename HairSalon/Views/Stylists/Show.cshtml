@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h2>Stylist @Model["stylist"].GetFirstName() @Model["stylist"].GetLastName()</h2>
@if (Model.Count == 0)
{
    <p>Currently, this stylist does not have any clients.</p>
}
@if(Model.Count != 0)
{
    <ol>
    @foreach (var item in @Model["client"])
    {
        <li><a href='/categories/@Model["category"].GetId()/items/@item.GetId()'>@item.GetDescription() @item.GetDueDate().ToString("MM/dd/yyyy")</a></li>
    }
    </ol>
}
