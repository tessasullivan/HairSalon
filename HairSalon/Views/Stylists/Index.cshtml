@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h3>Stylists</h3>



@if (Model.Count == 0)
{
  <p>No stylists have been added yet</p>
}
@if(Model.Count != 0)
{
  <table>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
    </tr>
  @foreach (Stylist stylist in Model)
  {
    <tr>
      <td><a href='/stylists/@stylist.GetId()'>@stylist.GetFirstName() @stylist.GetLastName()</a></td>
      <td>@stylist.GetPhoneNumber()</td>
    </tr>
  }
  </table>
}
<nav class="bottom">
  <a href='/stylists/new'>Add a stylist</a>
  <a href='/stylists/delete'>Delete All</a>
</nav>